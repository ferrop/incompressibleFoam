FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;

    // 1st order schemes : Euler 
    // 2nd order schemes : backward, CrankNicolson DIRK22
    // 3th order schemes : BDF3, EDIRK23_1, EDIRK23_2, DIRK33, DIRK43
    // steady-state schemes : localEuler steadyState

    ddt(U)          backward;
    ocCoeff         1.0; //Off-centering coefficient only used if ddt(U) CrankNicolson;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         Gauss linear;
    div(phi,U)      Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear orthogonal;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         orthogonal;
}


// ************************************************************************* //
